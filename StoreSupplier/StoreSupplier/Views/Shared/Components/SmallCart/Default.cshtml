@model SmallCartViewModel

@if (Model != null)
{
<p>
    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" style="margin-bottom: 5px;" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </svg>
    Items in cart:
    <span class="badge badge-primary">@Model.NumberOfItems</span>
</p>
    <p>Total: <b>@Model.TotalAmount.ToString("C2")</b></p>
    <div class="d-flex">
        <a class="btn btn-primary mr-2" asp-controller="Cart" asp-action="Index">View Cart</a>
        <a class="btn btn-danger" asp-controller="Cart" asp-action="Clear">Clear Cart</a>
    </div>
    
}

else
{
<p class="lead m-0">
    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" style="margin-bottom: 5px;" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </svg>
    Your cart is empty!
</p>
}
