@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <a class="btn btn-success" asp-action="RegisterStaff">Create New</a>
</p>

<table class="table table-responsive-sm table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a class="text-dark" style="text-decoration: none;" asp-action="Details" asp-route-Id="@item.Id">@item.Name</a>
            </td>
            <td>
                <a class="text-dark" style="text-decoration: none;" asp-action="Details" asp-route-Id="@item.Id">@item.LastName</a>               
            </td>
            <td>
                <a class="text-dark" style="text-decoration: none;" asp-action="Details" asp-route-Id="@item.Id">@item.UserName</a>
                
            </td>
            <td>
                <a class="text-dark" style="text-decoration: none;" asp-action="Details" asp-route-Id="@item.Id">@item.Email</a>
            </td>

            <td>
                <a class="btn btn-primary m-2" asp-action="Edit" asp-route-Id="@item.Id">Edit</a>
                <a class="btn btn-info m-2" asp-action="Details" asp-route-Id="@item.Id">Details</a>
                <a class="btn btn-danger confirmDeletion m-2" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
