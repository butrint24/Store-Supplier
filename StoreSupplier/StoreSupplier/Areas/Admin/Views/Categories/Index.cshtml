@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table table-responsive-sm table-striped sorting" id="categories">
    <thead class="thead-dark">
        <tr>
            <th>
                Name
            </th>
            <th>
                Slug
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="id_@item.Id">
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Slug
                </td>
                <td>
                    <a class="btn btn-primary m-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    @if (User?.IsInRole("Admin") ?? false)
                    {
                        <a class="btn btn-danger confirmDeletion m-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <div class="d-flex w-100 justify-content-center">
        <pagination page-count="@ViewBag.TotalPages" page-target="/admin/categories"
                    page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange"></pagination>
    </div>

}


@section Scripts {
    <script>
        $("table#categories tbody").sortable({
            items: "tr",
            placeholder: "ui-state-highlight",
            update: function () {
                let ids = $("table#categories tbody").sortable("serialize");
                let url = "/admin/categories/reorder";
                $.post(url, ids, function () { });
            }
        })
    </script>
}
